<component
	xmlns="http://maven.apache.org/ASSEMBLY-COMPONENT/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY-COMPONENT/2.0.0 http://maven.apache.org/xsd/assembly-component-2.0.0.xsd">

	<dependencySets>
		<dependencySet>
			<outputDirectory>lib/mp</outputDirectory>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<excludes>
				<exclude>${project.groupId}:*:*</exclude>
				<exclude>*:hibernate-c3p0:*</exclude>
				<exclude>*:c3p0:*</exclude>
				<exclude>*:mchange-commons-java:*</exclude>
				<exclude>org.slf4j:*:*</exclude>
				<exclude>com.google.guava:guava:*</exclude>
				<exclude>com.google.guava:failureaccess:*</exclude>
				<exclude>com.github.javaparser:javaparser-symbol-solver-core:*</exclude>
				<exclude>com.github.javaparser:javaparser-symbol-solver-model:*</exclude>
				<exclude>*:*:linux</exclude>
				<exclude>*:*:win</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveDependencies>true</useTransitiveDependencies>
			<outputDirectory>lib/cp</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>*:hibernate-c3p0:*</include>
				<include>*:c3p0:*</include>
				<include>*:mchange-commons-java:*</include>
				<include>org.slf4j:*:*</include>
				<include>com.google.guava:guava:*</include>
				<include>com.google.guava:failureaccess:*</include>
				<include>com.github.javaparser:javaparser-symbol-solver-core:*</include>
				<include>com.github.javaparser:javaparser-symbol-solver-model:*</include>
			</includes>
		</dependencySet>
	</dependencySets>

	<moduleSets>
		<moduleSet>
			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>dev.jfxde:dev.jfxde.api</include>
				<include>dev.jfxde:dev.jfxde.logic</include>
				<include>dev.jfxde:dev.jfxde.fonts</include>
				<include>dev.jfxde:dev.jfxde.jfxext</include>
				<include>dev.jfxde:dev.jfxde.ui</include>
				<include>dev.jfxde:dev.jfxde.data</include>
				<include>dev.jfxde:dev.jfxde.sysapps</include>
			</includes>
			<binaries>
				<outputDirectory>modules</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<excludes>
							<exclude>*:*:*</exclude>
						</excludes>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>dev.jfxde:dev.jfxde.apps</include>
				<include>dev.jfxde:dev.jfxde.demos</include>
			</includes>
			<binaries>
				<outputDirectory>apps</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<excludes>
							<exclude>*:*:*</exclude>
						</excludes>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
	<files>
		<file>
			<source>src/main/conf/logging.properties</source>
			<outputDirectory>conf</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/main/conf/preferences.properties</source>
			<outputDirectory>conf</outputDirectory>
			<filtered>true</filtered>
		</file>
	</files>
</component>
